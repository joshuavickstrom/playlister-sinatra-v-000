<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Song</title>
</head>
<body>
  <h1> <%= @song.name %></h1>
  <a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %> </a>
  <% @songs.genres.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"> <%= genre.name %> </a>
  <%end%>
</body>
</html>