<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Song</title>
</head>
<body>
  <h1>Song: <%= @song.name %></h1>
  <h2><a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %> </a></h2>
  <h2>Genres:</h2>
  <% @song.genres.each do |genre| %>
    <p><a href="/genres/<%= genre.slug %>"> <%= genre.name %> </a></p>
  <%end%>
</body>
</html>
